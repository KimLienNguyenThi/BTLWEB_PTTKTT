@model IEnumerable<ThuVienBTL.Models.DkiMuonSach>

@{
    ViewBag.Title = "History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color:orangered">Lịch sử đăng ký</h1>

<div class="table-responsive">
    <table class="table table-striped" style="text-align:center">
        <thead>
            <tr>
                <th>
                    <h6>Mã đăng ký</h6>
                </th>
                <th>
                    <h6>Ngày đăng ký mượn</h6>
                </th>
                <th>
                    <h6>Ngày hẹn</h6>
                </th>
                <th>
                    <h6>Tình trạng</h6>
                </th>
                <th>
                    <h6>Thao tác</h6>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="row_@item.MaDK" class="@if(item.Tinhtrang == 3) { <text>da-huy</text> }">
                    <td style="margin-right:50px">
                        @Html.DisplayFor(modelItem => item.MaDK)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayDKMuon)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayHen)
                    </td>
                    <td class="trang-thai">
                        @if (item.Tinhtrang == 0)
                        {
                            <span class="badge badge-secondary" style="color:black;">Chưa duyệt</span>
                        }

                        else if (item.Tinhtrang == 1)
                        {
                            <span class="badge badge-success" style="color:black">Đã duyệt</span>

                        }
                        else if (item.Tinhtrang == 2)
                        {
                            <span class="badge badge-info" style="color:black">Đã mượn</span>
                        }
                        else if (item.Tinhtrang == 3)
                        {
                            <span class="badge badge-danger" style="color:black">Đã hủy</span>
                        }
                    </td>

                    <td>
                        @if (item.Tinhtrang == 0)
                        {
                            <button class="btn btn-danger btn-sm btn-huy" onclick="HuyDon(@item.MaDK)">Hủy</button>
                        }

                        <button class="btn btn-danger btn-sm" onclick="showDetails(@item.MaDK)">Chi tiết</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@*/////////////////////////////////*@

<!-- Add this modal at the end of your View -->
<div class="modal fade" id="Details" role="dialog" style="max-width: 700px; margin-left:420px;">
    <div class="modal-dialog" style="justify-items: center; display: flex; align-items: center">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" style="margin-left:150px; color:orangered">Chi tiết đăng ký</h5>
                <br />
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12 mb-3">
                        <strong>Mã đăng ký:</strong> <span id="MaDK"></span>

                    </div>

                </div>
                <div class="row">
                    <div class="col-3" style="text-align:center"><strong>Mã sách</strong></div>
                    <div class="col-6" style="text-align:center"><strong>Tên sách</strong></div>
                    <div class="col-3" style="text-align:center"><strong>Số lượng</strong></div>
                </div>
                <div id="ChiTietSachList">
                    <table class="table ">
                        <td id="MaSach" class="col-3" style="text-align:center"></td>
                        <td id="TenSach" class="col-6" style="text-align:center"></td>
                        <td id="Soluong" class="col-3" style="text-align:center"></td>
                        <!-- Add other fields as needed -->
                    </table>
                </div>
                <!-- Add other fields as needed -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>


<!-- Update the "Details" action link in your existing table -->

<script>
    function HuyDon(maDK) {

        var confirmed = confirm("Bạn chắc chắn muốn hủy đơn?");
        if (confirmed) {

            console.log("maDK", maDK)

            $.ajax({
                url: "/User/HuyDon",
                type: "POST",
                data: {
                    maDK: maDK,
                },
                success: function (data) {
                    if (data.success) {
                        alert(data.message);

                        // Ẩn nút Hủy và cập nhật trạng thái đã hủy
                        var row = $("#row_" + maDK);
                        var trangThaiElement = row.find(".trang-thai");
                        trangThaiElement.html("<span class='badge badge-danger' style='color:black;'>Đã hủy</span>");
                        row.addClass("da-huy");
                        row.find(".btn-huy").hide();
                    } else {
                        console.log("Huy don thanh cong");
                    }
                },
                error: function () {
                    alert("Error fetching data.");
                }
            });
        }
    }


    function showDetails(maDK) {

        // Xoá dữ liệu cũ trên modal
        $("#MaDK").empty();
        $("#MaSach").empty();
        $("#MTenSach").empty();
        $("#Soluong").empty();

