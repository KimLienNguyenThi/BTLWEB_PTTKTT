
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Hiển thị danh sách NhanViens -->
<section class="content">
    <div class="container-fluid pt-4">
        <div class="row">
            <!-- Sách và Thông tin độc giả -->
            <div class="col-12" style="height: 80vh;">
                <div class="card" style="height: 100%;">
                    <div class="card-header">
                        <div class="form-row">

                            <div class="col-6">
                                <h3 class="text-center text-blue text-bold">Quản Lý Phiếu Trả </h3>
                            </div>

                            <div class="card-tools col-3">
                                <div class="input-group input-group-sm pt-1">
                                    <input type="text"
                                           name="table_search"
                                           class="form-control float-right"
                                           placeholder="Search" />

                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-default">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <div class="col-3">
                                <button type="button" class="btn btn-warning lamMoiSach" id="lamMoiButton">Làm mới</button>
                            </div>

                        </div>
                    </div>
                    <div class="card-body table-responsive p-0">
                        <form>
                            <!--Danh sách phieu trả-->
                            <div class="text-center">
                                <table class="table table-hover table-head-fixed table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Mã PM</th>
                                            <th>SEE ALL</th>
                                            <th>Mã PT</th>
                                            <th>Ngày trả</th>
                                            <th>Mã Thẻ</th>
                                            <th>Độc giả</th>
                                            <th>SDT</th>
                                            <th>Mã NV</th>
                                        </tr>
                                    </thead>
                                    <tbody id="danhSachPhieuTra">
                                        @foreach (var item in ViewData["PhieuTra"] as List<WebQuanLyThuVien.Areas.Admin.Data.PhieuTra_GroupMaPM_DTO>)
                                        {
                                            var isFirst = true;
                                            foreach (var dataPhieuTra in item.DataPhieuTras)
                                            {
                                                <tr class="qly_phieutra_row" data-ma-the="@dataPhieuTra.MaPT">
                                                    @if (isFirst)
                                                    {
                                                        isFirst = false;
                                                        <td rowspan="@item.CountRow">@item.MaPM</td>
                                                        <td id="'see_all' + @dataPhieuTra.MaPM" rowspan="@item.CountRow">
                                                            <!-- Thêm nút "Xem tất cả" -->
                                                            <button type="button" class="btn btn-info btn-sm" onclick="handleSeeAllClick(@item.MaPM,@dataPhieuTra.MaThe)">See All</button>
                                                        </td>
                                                    }


                                                    <td onclick="getCTPT(@dataPhieuTra.MaPT,@dataPhieuTra.MaThe )">@dataPhieuTra.MaPT</td>
                                                    <td>@string.Format("{0:dd-MM-yyyy}", dataPhieuTra.NgayTra)</td>

                                                    <td>@dataPhieuTra.MaThe</td>
                                                    <td>@dataPhieuTra.HoTenDG</td>
                                                    <td>@dataPhieuTra.SDT</td>
                                                    <td>@dataPhieuTra.MaNV</td>

                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


